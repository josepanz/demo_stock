<?xml version="1.0" encoding="UTF-8"?>
<bean:beans 
    xmlns:bean="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
    xmlns="http://www.springframework.org/schema/security" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
    http://www.springframework.org/schema/security 
    http://www.springframework.org/schema/security/spring-security-3.2.xsd">
  
<http auto-config="true" use-expressions="true">
        <!-- INDEX --> 
        <access-denied-handler error-page="/accessDenied.htm" />  
        <intercept-url pattern="/index.htm" access="hasAnyRole('administrador','tester')"/> <!--Interceptar esta direccion cuando el rol del usuario no es admin-->
        <!-- CITY--> 
        <intercept-url pattern="/city.htm" access="hasAnyRole('administrador','tester')"/> <!--Admin tiene acceso a ciudad y demas-->
        <intercept-url pattern="/editCity.htm" access="hasAnyRole('administrador')"/>                                             
        <intercept-url pattern="/addCity.htm" access="hasAnyRole('administrador')"/> 
        <intercept-url pattern="/deleteCity.htm" access="hasAnyRole('administrador',)"/> 
        <!--DEPARTAMENT-->
        <intercept-url pattern="/departament.htm" access="hasAnyRole('administrador','tester')"/> 
        <intercept-url pattern="/editDepartament.htm" access="hasAnyRole('administrador')"/> 
        <intercept-url pattern="/addDepartament.htm" access="hasAnyRole('administrador')"/> 
        <intercept-url pattern="/deleteDepartament.htm" access="hasAnyRole('administrador')"/>
        <!--COUNTRY-->
        <intercept-url pattern="/country.htm" access="hasAnyRole('administrador','tester')"/>
        <intercept-url pattern="/editCountry.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/addCountry.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/deleteCountry.htm" access="hasAnyRole('administrador')"/>     
        <!--CURRENCY-->
        <intercept-url pattern="/currency.htm" access="hasAnyRole('administrador','tester')"/>
        <intercept-url pattern="/editCurrency.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/addCurrency.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/deleteCurrency.htm" access="hasAnyRole('administrador')"/>
        <!--PRODUCT FAMILY-->
        <intercept-url pattern="/productFamily.htm" access="hasAnyRole('administrador','tester')"/>
        <intercept-url pattern="/editProductFamily.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/addProductFamily.htm" access="hasAnyRole('administrador')"/>
        <intercept-url pattern="/deleteProductFamily.htm" access="hasAnyRole('administrador')"/>
        <!----> <!--Etiqueta que valida el formulario de login--> 
        <form-login login-page="/login.htm" default-target-url="/index.htm" 
                    login-processing-url="/j_spring_security_check" authentication-failure-url="/login.htm?error" 
                    username-parameter="username"
                    password-parameter="password" />  
         <logout logout-success-url="/login.htm" logout-url="/salir" />  

         <!-- enable csrf protection       
            <form-login login-page="/login"  default-target-url="/index" authentication-failure-url="/login?error" 
                        username-parameter="usuario" password-parameter="lacontra" />
            <logout logout-success-url="/login?logout"/>
            <csrf/>
            
            
        --> 
        
    </http>
    <authentication-manager alias="authenticationManager">
        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource" 
                               users-by-username-query="SELECT username, password,1 as enabled FROM userss  WHERE username=?" 
                               authorities-by-username-query="SELECT username, authority,1 as enabled FROM authorities WHERE username=?" />
            <!--users-by-username-query consulta de todos los usuarios que tienen el username seteado por el usuario-->
            <!--authorities-by-username-query consulta de todos los roles que tiene ese usuario.-->
        </authentication-provider>
    </authentication-manager>        
</bean:beans>